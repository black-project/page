<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_page.infrastructure.persistence.orm.class">Black\Page\Infrastructure\Persistence\DoctrineORMRepository</parameter>
    </parameters>

    <services>

        <service
                id="black_page.infrastructure.persistence.orm"
                class="%black_page.infrastructure.persistence.orm.class%"
                public="false">
            <argument type="service" id="black_page.entity.manager" />
            <argument>%black_page.webpage.model.class%</argument>
        </service>

        <service id="black_page.infrastructure.persistence" alias="black_page.infrastructure.persistence.orm" />

        <service id="black_page.entity.manager" alias="doctrine.orm.entity_manager" public="false" />


    </services>
</container>
