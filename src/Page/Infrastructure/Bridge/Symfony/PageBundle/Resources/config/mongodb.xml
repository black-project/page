<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_page.infrastructure.persistence.mongodb.class">Black\Page\Infrastructure\Persistence\DoctrineMongoDBRepository</parameter>
    </parameters>

    <services>

        <service
                id="black_page.infrastructure.persistence.mongodb"
                class="%black_page.infrastructure.persistence.mongodb.class%"
                public="false">
            <argument type="service" id="black_page.document.manager" />
            <argument>%black_page.webpage.model.class%</argument>
        </service>

        <service id="black_page.persistence" alias="black_page.infrastructure.persistence.mongodb" />

        <service id="black_page.document.manager" alias="doctrine.odm.mongodb.document_manager" public="false" />
    </services>
</container>
